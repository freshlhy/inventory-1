<h1>Listing rooms for <%= link_to @site.name, @site %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.name %></td>
    <td><%= room.description %></td>
    <td><%= room.latitude %></td>
    <td><%= room.longitude %></td>
    <td><%= link_to 'Show', site_room_path(@site, room) %></td>
    <td><%= link_to 'Edit', edit_site_room_path(@site, room) %></td>
    <td><%= link_to 'Destroy', [@site, room], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Room', new_site_room_path(@site) %>
