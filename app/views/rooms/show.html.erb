<h2><%= @site.name %></h2>

<ul data-role="listview" data-inset="true" class="ui-grid-a">
  <li>
    <div class="ui-grid-a">
      <div class="ui-block-a">Room: </div>
      <div class="ui-block-b"><%= @room.name %></div>
    </div>
  </li>
  <li>
    <div class="ui-grid-a">
      <div class="ui-block-a">Desc: </div>
      <div class="ui-block-b">  <%= @room.description %></div>
    </div>
  </li>
  <li>
    <div class="ui-grid-a">
      <div class="ui-block-a">Lat: </div>
      <div class="ui-block-b">  <%= @room.latitude %></div>
    </div>
  </li>
  <li>
    <div class="ui-grid-a">
      <div class="ui-block-a">Lon: </div>
      <div class="ui-block-b"><%= @room.longitude %></div>
    </div>
  </li>
</ul>
<%= link_to 'Edit', edit_site_room_path(@site, @room) %>
<ol>
<% @room.items.each do |item| %>
<%= content_tag :li, item.tag %>
<% end %>
</ol>
<% content_for :footer do %>
  <%= content_tag :h3, link_to('Back', site_rooms_path(@site), :data => {:role => "button"}) %>
<% end %>