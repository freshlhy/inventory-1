<%= form_for(@site) do |f| %>
  <%= content_tag :ul, :data => {:role => 'listview', :inset => true} do %>
  <% if @site.errors.any? %>
    <li id="error_explanation" class="ui-body-e">
        <div data-role="collapsible" data-theme="e">
        <h3><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h3>

        <ul>
        <% @site.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </li>
  <% end %>

  <li data-role="fieldcontain">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </li>
  <li data-role="fieldcontain">
    <%= f.label :abbreviation %>
    <%= f.text_field :abbreviation %>
  </li>
  <li data-role="fieldcontain">
    <%= f.label :latitude %>
    <%= f.text_field :latitude %>
  </li>
  <li data-role="fieldcontain">
    <%= f.label :longitude %>
    <%= f.text_field :longitude %>
  </li>
  <li data-role="fieldcontain">
    <%= f.submit %>
  </li>
  <% end %>
<% end %>
