<%= link_to 'New Site', new_site_path %>
<%= content_tag :ul, :data => {:role => "listview", :inset => "true"} do %>
  <% @sites.each do |site| %>
    <%= content_tag :li, :class => "ui-li-has-count" do %>  
      <%= link_to site.name, site_path(site) %>
      <%= content_tag :span, site.items.count, :class => "ui-li-count"%>  
    <% end %>
  <% end %>
<% end %>